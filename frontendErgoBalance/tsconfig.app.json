{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "config.js"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "module": "ESNext",  // Använd ES-moduler
    "target": "ESNext",  // Kompilera till modern JavaScript
    "esModuleInterop": true,  // Aktivera för att hantera ES-moduler korrekt
    "moduleResolution": "node",  // Hantera modulupplösning som i Node.js
    "strict": true,  // För striktare typkontroll
    "skipLibCheck": true,  // För att hoppa över kontroll av typdefinitioner från bibliotek
    "allowSyntheticDefaultImports": true  // Tillåt användning av default-importer även om modulen inte explicit har en "default" export
  }
}